<%= link_to 'Home', :root %>
<h1>Current Wordcards</h1>

<table>
  <%= render 'wordcards/noticeholder' %>
  <thead>
    <tr>
      <th colspan="1">Word</th>
      <th colspan="1">Definition</th>
      <th colspan="1">Bin</th>
      <th colspan="1">Time to next appearance</th>
      <th colspan="1">Times answered wrong</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @wordcards.each do |wordcard| %>
      <tr>
        <td><%= wordcard[:word] %></td>
        <td><%= wordcard[:definition] %></td>
        <td><%= wordcard[:bin] %></td>
        <td><%= distance_of_time_in_words(wordcard.time_to_next_appearance) %></td>
        <td><%= wordcard[:times_wrong] %></td>
        <td><%# = link_to 'Show', wordcard %></td>
        <td><%= link_to 'Edit', edit_wordcard_path(wordcard) %></td>
        <td><%= link_to 'Destroy', wordcard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Wordcard', new_wordcard_path, method: :get %>
<%= button_to 'Reset all bins and counts', reset_bins_path, :data=>{:confirm=>"Are you sure you wish to reset all to bin 0 and wrong_count of 0?"} %>
